<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}GoMuscu{% endblock %}</title>
    <!-- CSS only -->
    {% block stylesheets %}{% endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="{{ asset('assets/css/base.css') }}" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('home') }}">
            <i id="test" class="fa-solid fa-dumbbell"></i>
        </a>
        <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Acceuil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('staff.list') }}">L'équipe</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('calculateur.list') }}">Calculateur</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- Navbar -->
<div class="container-fluid">
    <div class="m-3">
        {% for message in app.session.flashBag.get('info') %}
            {{ component('alert', {
                type: 'info',
                message: message
            }) }}
        {% endfor %}
        {% for message in app.session.flashBag.get('success') %}
            {{ component('alert', {
                type: 'success',
                message: message
            }) }}
        {% endfor %}
        {% for message in app.session.flashBag.get('error') %}
            {{ component('alert', {
                type: 'error',
                message: message
            }) }}
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center">
        {% block body %}{% endblock %}
    </div>
</div>

<footer class="mt-auto">
    {% block footer %}
        <figure class="text-center">
            <blockquote class="blockquote">
                <p>Heureux de vous accompagner tout au long de votre vie et/ou de votre transformation</p>
            </blockquote>
            <figcaption class="blockquote-footer">
                réalisé par <cite title="Source Title">Asyjan</cite>
            </figcaption>
        </figure>
    {% endblock %}
</footer>

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</body>
</html>
